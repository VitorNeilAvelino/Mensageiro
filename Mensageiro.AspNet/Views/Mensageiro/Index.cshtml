@using Mensageiro.AspNet.Helpers;

@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <title>Mensageiro</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/Mensageiro.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container body-content">
        <div class="container app">
            <div class="row app-one">
                <div class="col-sm-4 side">
                    <div class="side-one">
                        <div class="row heading">
                            <div class="col-sm-3 col-xs-3 heading-avatar">
                                <div class="heading-avatar-icon">
                                    <img src="https://api.adorable.io/avatars/40/@User.Identity.Name">
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-1 heading-dot pull-right">
                                <div class="dropdown">
                                    <i class="fa fa-ellipsis-v fa-2x dropdown-toggle pull-right" data-toggle="dropdown"></i>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "Home")">Sair</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row sideBar" data-bind="foreach: contatos" id="contatosDiv">
                            <div class="contato-box sideBar-body" data-bind="click: $parent.exibirDestinatario, css: {contatoSelecionado: selecionado}">
                                <div class="box-avatar avatar-icon">
                                    <img data-bind="attr:{src: 'https://api.adorable.io/avatars/50/' + usuarioId}">
                                </div>
                                <div class="box-nome sideBar-name">
                                    <span class="name-meta" data-bind="text: nome" />
                                </div>
                                <div class="box-horario sideBar-time">
                                    <span class="time-meta pull-right" data-bind="text: $data.dataUltimaMensagem" />
                                </div>
                                <div class="box-mensagem">
                                    <span class="mensagem-meta" data-bind="text: conteudoUltimaMensagem" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 conversation">
                    <div class="row heading" id="destinatario">
                        <div class="col-sm-2 col-md-1 col-xs-3 heading-avatar">
                            <div class="heading-avatar-icon">
                                <img data-bind="attr:{src: 'https://api.adorable.io/avatars/50/' + destinatarioId}">
                            </div>
                        </div>
                        <div class="col-sm-8 col-xs-7 heading-name">
                            <span class="heading-name-meta" data-bind="text: destinatarioNome" />
                        </div>
                    </div>
                    <div class="row message" id="conversation" data-bind="foreach: mensagens">
                        <div class="row message-body">
                            <div class="col-sm-12" data-bind="css: {destinatarioMensagem: ehDestinatario, remetenteMensagem: !ehDestinatario}">
                                <div data-bind="css: {receiver: ehDestinatario, sender: !ehDestinatario}">
                                    <div class="message-text">
                                        <span data-bind="text: conteudo" />
                                    </div>
                                    <span class="message-time pull-right" data-bind="text: horario" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row reply">
                        <form id="mensagemForm">
                            <div class="col-md-12 col-xs-9 reply-main">
                                <input type="text" class="form-control" id="mensagem" name="mensagem" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/knockout-3.4.2.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.3.0.js"></script>
    <script type="text/javascript" src="~/Scripts/Mensageiro/index.js"></script>
</body>
</html>